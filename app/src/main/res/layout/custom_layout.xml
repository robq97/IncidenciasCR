<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_lista"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/login" />

    <TextView
        android:id="@+id/txt_incidente_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/img_lista"
        android:layout_toRightOf="@+id/img_lista"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_estado_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_incidente_nombre"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/img_lista"
        android:layout_toRightOf="@+id/img_lista"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_desactivar"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/txt_estado_lista"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/img_lista"
        android:layout_toRightOf="@+id/img_lista"
        android:text="@string/btn_incidencia_resuelta" />
</RelativeLayout>